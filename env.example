# MapleHustleCAN Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# PROJECT CONFIGURATION
# =============================================================================
PROJECT_NAME=MapleHustleCAN API
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret Key (REQUIRED - Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
JWT_SECRET_KEY=your-super-secret-jwt-key-here-minimum-32-characters

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_STR=/api/v1
API_KEY_HEADER=X-API-Key

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL (REQUIRED for production)
DATABASE_URL=postgresql://username:password@localhost:5432/maplehustlecan

# Database SSL Mode (for production)
DATABASE_SSL_MODE=prefer

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://maplehustlecan.com,https://www.maplehustlecan.com

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,maplehustlecan.com,www.maplehustlecan.com,api.maplehustlecan.com

# =============================================================================
# SECURITY HEADERS
# =============================================================================
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self'; frame-ancestors 'none';

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=200

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=5242880
MAX_REQUEST_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# Email Settings
EMAILS_FROM_EMAIL=noreply@maplehustlecan.com
EMAILS_FROM_NAME=MapleHustleCAN

# =============================================================================
# SMS CONFIGURATION (Twilio)
# =============================================================================
# Twilio Configuration (for SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# S3 CONFIGURATION
# =============================================================================
# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET=maplehustlecan-files

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis URL (for caching and session storage)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY MONITORING
# =============================================================================
SECURITY_MONITORING_ENABLED=true
SECURITY_ALERTS_ENABLED=false
ALERT_EMAIL=admin@maplehustlecan.com
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# CELERY CONFIGURATION (Background Tasks)
# =============================================================================
# Celery Broker URL (Redis)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================
# Sentry DSN (for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001
